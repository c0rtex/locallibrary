extends layout

block content
  h1= title
  
  ul
  each author in author_list
    li
      a(href=author.url) #{author.name} 
      | (#{author.date_of_birth ? moment(author.date_of_birth).format('YYYY-MM-DD') : ''} - 
      | #{author.date_of_death ? moment(author.date_of_death).format('YYYY-MM-DD') : ''})

  else
    li There are no authors.